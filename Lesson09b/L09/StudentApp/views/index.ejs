<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Student List</title>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <br>
    <div class="text-center"><h2>Students from Student List App Database</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Student Name</th>
            <th width="100">Student Image</th>
            <th width="50">Dob</th>
            <th width="50">Contact</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>

          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < students.length; i++) { %>
          <tr>
            <td><a href= "/student/<%= students[i].studentid %>"><%= students[i].name %></a></td>
            <td><img src= "/images/<%= students[i].image %>" width="80"></td>
            <td><%= students[i].dob.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
            <td><%= students[i].contact %></td>
            <td><a href= "/editStudent/<%= students[i].studentid %>">Edit</a></td>
            <td><a href= "/deleteStudent/<%= students[i].studentid %>" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
