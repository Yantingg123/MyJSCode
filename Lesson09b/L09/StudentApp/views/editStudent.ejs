<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>

<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container">
    <br>
    <div class="text-center">
      <h2>Update Student</h2>
    </div>
    <br>
    <div>
      <% if (student) { %>
        <form action="/editStudent/<%= student.studentid %>" method="POST" enctype="multipart/form-data">
          <div class="mb-3 mt-3">
            <label for="name" class="form-label">Student Name:</label>
            <input type="text" class="form-control" id="name" name="name" value=<%= student.studentName %> required>
          </div>
          <div class="mb-3">
            <label for="dob" class="form-label">D.o.B:</label>
            <input type="date" class="form-control" id="dob" value=<%= formatedDob %> name="dob" required>
          </div>
          <div class="mb-3">
            <label for="contact" class="form-label">Contact:</label>
            <input type="number" class="form-control" id="contact" name="contact" value="<%= student.contact %>" required>
          </div>
          <div class="mb-3 mt-3">
            <label for="image" class="form-label">Image:</label><br>
            <input type="text" class="form-control" name="currentImage" value="<%= student.image %>" readonly>
            <img src="/images/<%= student.image %>" width="200">
          </div>
          <div class="mb-3 mt-3">
            <label for="image" class="form-label">New Image:</label>
            <input type="file" id="image" name="image" accept="image/*">
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Update Student</button>
        </form>
      <% } else { %>
        <p>No student found.</p>
      <% } %>
      <div>
        <br>
        <a href="/">Back</a>
      </div>
    </div>
  </div>
</body>

</html>
